; top-most EditorConfig file
root = true

[*]
charset = utf-8
end_of_line = LF
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.{js,css,html,twig,vue,yml}]
indent_size = 2

[*.md]
max_line_length = 80

[COMMIT_EDITMSG]
max_line_length = 0

[Makefile]
indent_style = tab
